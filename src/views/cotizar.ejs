<%- include("partials/_header") %>


<div class="container">
    Cotiza tus vehiculos
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <% if (listaVehiculos) { %> <% for(var i = 0; i < listaVehiculos.length; i++) { %>
            <div class="col">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="<%= listaVehiculos[i].imagen %>" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= listaVehiculos[i].marca %> <%= listaVehiculos[i].linea %> 
                            <small class="text-muted">(<%= listaVehiculos[i].modelo %>)</small>
                        </h5>
                        <p class="card-text">
                            <div class="badge bg-primary text-wrap">
                                $<%= listaVehiculos[i].precio %>
                            </div> 
                            <small class="text-muted">/ Por dia</small>
                            <br>
                            <%= listaVehiculos[i].descripcion %>
                        </p>
                        <% if(nombreUsuario){ %>
                            <a href="/reservar?vehiculoId=<%= listaVehiculos[i].id %>" class="btn btn-primary">Reservar</a>
                        <% } else { %>
                            <p class="card-text"><small class="text-muted">Inicia sesion para reservar</small></p>
                        <% } %>
                    </div>
                </div>
            </div>
        <% } %> <% } %>
    </div>
</div>

<%- include("partials/_footer") %>